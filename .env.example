# Teknoify Environment Variables
# Copy this file to .env and update the values

# Application Settings
VITE_APP_TITLE=Teknoify
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Dijital Çözümler ve Otomasyon

# API Configuration
VITE_API_BASE_URL=https://api.teknoify.com
VITE_API_VERSION=v1
VITE_API_TIMEOUT=10000

# Analytics & Monitoring
VITE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_ANALYTICS_ENDPOINT=https://analytics.teknoify.com/events
VITE_SENTRY_DSN=https://xxxxxxxxx@sentry.io/xxxxxxx

# Feature Flags
VITE_ENABLE_PWA=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_TRACKING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Security
VITE_CSP_NONCE=auto-generated
VITE_ENABLE_CSP=true
VITE_ENABLE_SECURITY_HEADERS=true

# Development Settings
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info
VITE_MOCK_API=false

# Social Media & Contact
VITE_COMPANY_EMAIL=info@teknoify.com
VITE_COMPANY_PHONE=+90-XXX-XXX-XXXX
VITE_LINKEDIN_URL=https://www.linkedin.com/company/teknoify
VITE_GITHUB_URL=https://github.com/your-username/teknoify

# SEO & Meta
VITE_SITE_URL=https://teknoify.com
VITE_OG_IMAGE=https://teknoify.com/og-image.jpg
VITE_TWITTER_HANDLE=@teknoify